@keyframes glow {  
    0% { box-shadow: 0 0 50px rgba(255, 255, 255, 0.5); }  
    50% { box-shadow: 0 0 80px rgba(255, 255, 255, 0.8); }  
    100% { box-shadow: 0 0 50px rgba(255, 255, 255, 0.5); }  
}  
  
@keyframes twinkle {  
    0% { opacity: 0.7; }  
    50% { opacity: 1; }  
    100% { opacity: 0.7; }  
}  
  
@keyframes fadeIn {  
    0% { opacity: 0; transform: translateY(20px); }  
    100% { opacity: 1; transform: translateY(0); }  
}  
  
